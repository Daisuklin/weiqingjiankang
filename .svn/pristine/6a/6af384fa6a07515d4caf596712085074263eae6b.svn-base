 .wx-goods-detail {
   .slider-list {
     height: 7.5rem!important;
     width: 100%!important;
     img {
       width: 100%;
       //height: 7.5rem !important;
     }
     .slider-slide {
       padding: 0!important;
     }
   }
   .wx-goods-detail-info{padding: 0.2rem 0.2rem 0rem;}

   .wx-goods-detail-info .am-flexbox-item:not(:first-child) {
     font-size: .24rem;
     color: red;
   }
   .wx-goods-detail-coupon {
     font-size: .24rem;
     color: gray;
     padding: .2rem 0;
   }
   div.am-card-header-content img {
     height: 1rem;
   }

   .am-tabs-content .am-tabs-tabpane {
     overflow: hidden;
   }
   .goodsDetail_condition{
     .am-list-content{font-size:0.28rem;color:#333;}
     .am-list-body div:not(:last-child) .am-list-line:after{border-bottom: none;}
   }
   /*评价*/
   .goods-Detail-evaluate{
     .Detail-evaluate{
        .am-wingblank:not(:last-child){border-bottom: 1px solid #e5e5e5;}
     }
     .am-list-content{font-size:0.28rem;color:#333;}
     .am-flexbox-item{font-size: 0.24rem;color:#999;}
     .am-list-body div:not(:last-child) .am-list-line:after{border-bottom: none;}
   }
   /*介绍*/
   .item_name{color:#9c9c9c;font-size: 0.28rem}
   .item_price{color:#e8331e;font-size: 0.3rem;padding: 0.2rem 0;}
   .item_num{color:#9c9c9c;font-size: 0.28rem}
   /*详细信息*/
   .goodsMoreInfo{
     .am-tabs-tab{color:#333;font-size: 0.28rem;}
     .am-tabs-tab-active{color:#77b4f5 !important;}
     .am-tabs-ink-bar{background-color: #77b4f5 !important;}

   }
 }
.am-modal.am-modal-transparent .am-modal-content .am-modal-body {
      padding: 0 !important;
    }
@media (device-width:375px) and (-webkit-min-device-pixel-ratio:2){
    .imgDe{
        width:7rem !important
    }
}
@media screen and (device-aspect-ratio: 40/71) {
    .imgDe{
        width:5.5rem !important;
        height:7.5rem !important;
    }
}