 .wx-goods-detail {
   .slider-list {
     height: 7rem!important;
     width: 100%!important;
     img {
       width: 100%;
       height: 100%;
     }
     .slider-slide {
       padding: 0!important;
     }
   }
   .wx-goods-detail-info{padding: 0.2rem 0.2rem 0rem;}
   .wx-goods-detail-info .am-flexbox-item:not(:first-child) {
     font-size: .24rem;
     color: red;
   }
   .am-list-item .am-list-line .am-list-content{
     color: #333333;}
   .wx-goods-detail-coupon {
     font-size: .24rem;
     color: gray;
     padding: .2rem 0;
   }
   div.am-card-header-content img {
     height: 1rem;
   }

   .am-tabs-content .am-tabs-tabpane {
     overflow: hidden;
   }
   
 }
 .am-list-body div:not(:last-child) .am-list-line:after, .am-list-body:after,.am-list-body{
    border: none;
 }
