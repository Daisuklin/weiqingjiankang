.wx-storegoods .list-view-section-body{
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
  -ms-flex-align: center;
  align-items: center;

  webkit-flex-wrap: wrap;
  -ms-flex-wrap: wrap;
  flex-wrap: wrap;
}
@media screen and (device-aspect-ratio: 40/71) {
  .wx-store .am-grid .am-flexbox .am-flexbox-item.am-grid-item:before{    padding-bottom: 140%;
  }
}