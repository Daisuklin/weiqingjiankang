.wx-comment {
  .am-textarea-control textarea {
    font-size: .28rem;
  }
  .textAreaTtem{
    padding-left: 0.1rem;
    .am-textarea-control{
      padding: 0.15rem 0rem;
      textarea{font-size: 0.26rem;color:#666;}
    }
  }
  .imagesPicker{
    .am-image-picker-list{

      .am-wingblank{
        margin: 0px;
        .am-flexbox{overflow: hidden;}
      }
    }
  }
  .comment_score{
    padding: 0.3rem 0.26rem;border-bottom: 1px solid #e5e5e5;
    .comment_score_name{font-size: 0.28rem;color:#333;}
  }
  .commstar-mod {
    display: inline-block; // margin-top: 0.05rem;
    .commstar {
      height: .42rem;
      line-height: .42rem;
      .star {
        width: .42rem;
        height: .42rem;
        .active {
          background-position: top;
        }
      }
    }
  }
  .agreeItem{
    .am-checkbox-agree-label{
    color: rgb(51, 51, 51);
    font-size: 0.28rem;
      .am-checkbox-inner{top:19px;}
  }
  }
}
.am-checkbox-inner:after{right: 0.12rem;top: 0.03rem;}
