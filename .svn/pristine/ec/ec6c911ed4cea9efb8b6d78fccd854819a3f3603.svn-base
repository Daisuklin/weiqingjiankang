.wx-EvaluteList {
  .wx-EvaluteList-top {
    text-align: center;
    height: 1rem;
    background-color: #FFFFFF;
  }
  .myEvaluteList_header{
    padding: 0.1rem 0rem;
    .am-segment-item{background: #ffffff;color: #333;border:none;}
    .am-segment-item-selected{color: #00aade !important;}
    .am-segment-item div div{padding-top: 0.1rem;}

  }
/*  .wx-EvaluteList-top {
    text-align: center;
    height: 1rem;
    background-color: #FFFFFF;
  }*/
}

.myEvaluteListfix-scroll{
  .evalutelist_content1{
    .evalute_name{font-size: 0.28rem;color:#333;}
    .evalute_data{font-size:0.26rem; color:#999;float: right; }
    .evalute_iconimg{padding-top: 0.1rem;
      img{padding-right: 0.09rem;}
    }
  }
  .evalute_product{font-size: 0.26rem;color:#333;}
}
@media (device-width:375px) and (-webkit-min-device-pixel-ratio:2){
  .imgDe_evalute{
    max-width: 7rem !important;
  }
}
@media screen and (device-aspect-ratio: 40/71) {
  .imgDe_evalute{
    max-width:5.5rem !important;
    max-height:7.5rem !important;
  }
}